#!/bin/sh
exec 2>&1
exec chpst -u <%= node['graphite']['user_account'] %> -l <%= node['graphite']['storage_dir'] %>/carbon-<%= @options[:name] %><%= @options[:instance] %>.lock -- /usr/bin/carbon-cache --pid <%= node['graphite']['storage_dir'] %>/carbon-<%= @options[:name] %>-<%= @options[:instance] %>.pid --instance=<%= @options[:instance] %> --config=<%= node["graphite"]["base_dir"] %>/conf/carbon.conf --debug start
